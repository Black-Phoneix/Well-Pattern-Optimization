import numpy as np
import matplotlib.pyplot as plt
from patterns.geometry import generate_center_ring_pattern
from models.impedance import solve_network_flow

# --- 1. Define basic parameters (based on the thesis) ---
mu = 5e-5      # PaÂ·s (CO2 viscosity)
rho = 600.0    # kg/m3 (CO2 density)
k = 50e-15     # m2 (permeability, 50 mD)
b = 50.0       # m (reservoir thickness)
rw = 0.15      # m (well radius)
P_inj = 200e5  # 20 MPa (injection pressure)
P_prod = 150e5 # 15 MPa (production pressure)

# --- 2. Scenario B: Center + ring layout (new strategy) ---
# Configuration: 3 injectors, 1 central producer, 4 outer producers
# Key strategy: increase R_inj (move injectors farther from the center) and adjust R_prod
# to place outer producers closer to injectors, balancing the impedance.

# Example: injectors at 800 m, outer producers at 700 m, center producer at 0 m.
inj_B, prod_B = generate_center_ring_pattern(
    n_inj=3,
    n_prod_outer=4,
    R_inj=800,       # Push injectors farther out to increase impedance to the center
    R_prod=700,      # Place outer producers closer to injectors (approx. 100 m distance)
    center_producer=True
)

# Calculate flow distribution using the network solver
flows_B = solve_network_flow(inj_B, prod_B, P_inj, P_prod, mu, rho, k, b, rw)

# --- 3. Visualization ---
fig, axes = plt.subplots(1, 2, figsize=(14, 6))

# Plot Scenario B layout (map view)
ax1 = axes[0]
ax1.set_title("Scenario B: Center + Ring Layout (Optimized)")
ax1.scatter([w.x for w in inj_B], [w.y for w in inj_B],
            c='r', marker='^', s=150, label='Injectors (3)')
ax1.scatter([w.x for w in prod_B], [w.y for w in prod_B],
            c='b', marker='o', s=150, label='Outer Producers (4)')
# Highlight the center producer
ax1.scatter([0], [0],
            c='green', marker='*', s=300, label='Center Producer (1)', zorder=5)
ax1.set_xlabel("x [m]")
ax1.set_ylabel("y [m]")
ax1.axis('equal')
ax1.legend(loc='upper right')
ax1.grid(True, linestyle=':', alpha=0.6)

# Plot Scenario B flow rates
ax2 = axes[1]
# Calculate CV (coefficient of variation)
cv_B = np.std(flows_B) / np.mean(flows_B)

ax2.set_title(f"Scenario B Flow Distribution (CV={cv_B:.2f})")
# Use specific colors to distinguish the center well from the outer wells
colors = ['green'] + ['skyblue'] * 4
bars = ax2.bar(range(len(flows_B)), flows_B, color=colors, edgecolor='black')

# Axis labels and tick formatting
ax2.set_ylabel("Mass Flow Rate [kg/s]")
ax2.set_xticks(range(len(flows_B)))
ax2.set_xticklabels(['Center'] + [f'Outer {i+1}' for i in range(4)])
ax2.grid(axis='y', alpha=0.3)

# Add value labels on top of the bars
for bar in bars:
    height = bar.get_height()
    ax2.text(
        bar.get_x() + bar.get_width() / 2.0,
        1.01 * height,
        f'{height:.1f}',
        ha='center',
        va='bottom'
    )

plt.tight_layout()
plt.show()
